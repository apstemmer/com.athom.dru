{
    "id": "com.athom.dru",
    "name": {
        "en": "DRU",
        "nl": "DRU"
    },
    "version": "0.0.1",
    "compatibility": "0.x || 1.x",
    "author": {
        "name": "Arthur Stemmer",
        "email": "apstemmer@hotmail.com"
    },

    "description":"Use this app to control your DRU fireplace via Homey",
    "flow" : {
        "conditions":[
            {
                "id":"light_status",
                "title":{
                    "en":"are the lights !{{on|off}}?",
                    "nl":"zijn de lichten !{{aan|uit}}?"
                },
                "args":[
                  {
                    "name":"device",
                    "type":"device",
                    "filter": "driver_id=dru"
                  }
                ]
            },
            {
                "id":"main_status",
                "title":{
                    "en":"is the main flame !{{on|off}}?",
                    "nl":"Is de centrale vlam !{{aan|uit}}?"
                },
                "args":[
                  {
                    "name":"device",
                    "type":"device",
                    "filter": "driver_id=dru"
                  }
                ]
            },
            {
                "id":"secondary_status",
                "title":{
                    "en":"Is the secondary flame !{{on|off}}?",
                    "nl":"is de tweede vlam !{{aan|uit}}?"
                },
                "args":[
                  {
                    "name":"device",
                    "type":"device",
                    "filter": "driver_id=dru"
                  }
                ]
            },
            {
                "id":"room_temp",
                "title":{
                    "en":"Room temperature is:",
                    "nl":"De temperatuur is:"
                },
                "args":[
                    {
                      "name":"device",
                      "type":"device",
                      "filter": "driver_id=dru"
                    },
                    {
                        "name":"temp_rel",
                        "type":"dropdown",
                        "values":[
                            {
                                "id":"larger",
                                "label":{
                                    "en":"larger than",
                                    "nl":"groter dan"
                                }
                            },
                            {
                                "id":"equal",
                                "label":{
                                    "en":"equal to",
                                    "nl":"gelijk aan"
                                }
                            },
                            {
                                "id":"smaller",
                                "label":{
                                    "en":"smaller than",
                                    "nl":"kleiner dan"
                                }
                            }
                        ]
                    },
                    {
                        "name":"temp_set",
                        "type":"range",
                        "min":-20,
                        "max":40,
                        "step":0.5,
                        "label":"Â°C",
                        "labelMultiplier":1,
                        "labelDecimals":1
                    }
                ]
            }
        ],
        "actions":[
            {
                "id":"light_switch",
                "title": {
                    "en": "turn light on",
                    "nl": "doe licht aan"
                },
                "args":[
                    {
                      "name":"device",
                      "type":"device",
                      "filter": "driver_id=dru"
                    },
                    {
                        "name":"toggle",
                        "type":"dropdown",
                        "values":[
                            {
                                "id":"on",
                                "label":{
                                    "en":"on",
                                    "nl":"aan"
                                }
                            },
                            {
                                "id":"off",
                                "label":{
                                    "en":"off",
                                    "nl":"uit"
                                }
                            }
                        ]
                    }
                ]
            },
            {
                "id":"main_switch",
                "title": {
                    "en": "turn flames",
                    "nl": "zet vlammen"
                },
                "args":[
                    {
                      "name":"device",
                      "type":"device",
                      "filter": "driver_id=dru"
                    },
                    {
                        "name":"toggle",
                        "type":"dropdown",
                        "values":[
                            {
                                "id":"on",
                                "label":{
                                    "en":"on",
                                    "nl":"aan"
                                }
                            },
                            {
                                "id":"off",
                                "label":{
                                    "en":"off",
                                    "nl":"uit"
                                }
                            }
                        ]
                    }
                ]
            },
            {
                "id":"secondary_switch",
                "title": {
                    "en": "turn secondary",
                    "nl": "zet tweede vlam"
                },
                "args":[
                    {
                      "name":"device",
                      "type":"device",
                      "filter": "driver_id=dru"
                    },
                    {
                        "name":"toggle",
                        "type":"dropdown",
                        "values":[
                            {
                                "id":"on",
                                "label":{
                                    "en":"on",
                                    "nl":"aan"
                                }
                            },
                            {
                                "id":"off",
                                "label":{
                                    "en":"off",
                                    "nl":"uit"
                                }
                            }
                        ]
                    }
                ]
            },
            {
                "id":"main_height",
                "title": {
                    "en": "set flame intensity",
                    "nl": "sterke van de vlam"
                },
                "args":[
                    {
                      "name":"device",
                      "type":"device",
                      "filter": "driver_id=dru"
                    },
                    {
                        "name":"height",
                        "type":"range",
                        "min":0,
                        "max":100,
                        "step":1,
                        "label":"%",
                        "labelMultiplier": 1,
                        "labelDecimals":2
                    }
                ]
            }
        ]
    },
    "drivers":[
        {
            "id":"dru",
            "name":{
                "en":"Dru driver",
                "nl":"Dru driver"

            },
            "class":"other",
            "mobile":{
              "components":[
                {
                  "id":"toggle",
                  "capabilities":["onoff.light"],
                  "options":{
                    "showTitle":true
                  }
                },
                {
                  "id":"ternary",
                  "capabilities":["flame_enum"],

                  "options":{
                    "icons":{
                      "top":false,
                      "middle":false,
                      "bottom":false
                    },
                    "values":{
                      "top":"both",
                      "middle":"off",
                      "bottom":"single"
                    }
                  }
                },{
                  "id":"slider",
                  "capabilities":["flame_height"]
                }
              ]
            },
            "pair":[
                {
                    "id":"list_my_devices",
                    "template":"list_devices",
                    "navigation": {
                        "next": "checkfail"
                    }
                },
                {
                    "id": "add_my_devices",
                    "template": "add_devices",
                    "navigation":{
                      "next":"checkFail"
                    }
                },{
                  "id":"checkfail"
                }
            ],
            "capabilities":["onoff.light","onoff.main","onoff.secondary","flame_height","flame_enum"],
            "settings":[
                {
                  "type":"group",
                  "label": {
                    "en":"fireplace settings",
                    "nl":"haard instellingen"
                  },
                  "children":[
                      {
                        "id":"rssi",
                        "type": "label",
                        "label":{
                          "en":"RSSI",
                          "nl":"RSSI"
                        },
                        "value":"-"
                      },
                      {
                        "id":"fault",
                        "type": "label",
                        "label":{
                          "en":"Fault",
                          "nl":"Defect"
                        },
                        "value":"-"
                      },
                      {
                        "id":"fault",
                        "type": "label",
                        "label":{
                          "en":"Fault",
                          "nl":"Defect"
                        },
                        "value":"-"
                      },
                      {
                        "id":"rcbound",
                        "type": "label",
                        "label":{
                          "en":"Remote connected",
                          "nl":"Afstandsbediening"
                        },
                        "value":"-"
                      },
                      {
                        "id":"temperature",
                        "type": "label",
                        "label":{
                          "en":"temperature",
                          "nl":"temperatuur"
                        },
                        "value":"-"
                      },
                      {
                        "id":"light",
                        "type": "label",
                        "label":{
                          "en":"Lights",
                          "nl":"Lichten"
                        },
                        "value":"-"
                      },
                      {
                        "id":"main",
                        "type": "label",
                        "label":{
                          "en":"Main flame",
                          "nl":"Hoofdvlam"
                        },
                        "value":"-"
                      },
                      {
                        "id":"secondary",
                        "type": "label",
                        "label":{
                          "en":"Secondary",
                          "nl":"Secundaire"
                        },
                        "value":"-"
                      },
                      {
                        "id":"pilot",
                        "type": "label",
                        "label":{
                          "en":"Pilot",
                          "nl":"Waakvlam"
                        },
                        "value":"-"
                      },
                      {
                        "id":"flame_possible",
                        "type": "label",
                        "label":{
                          "en":"set flame",
                          "nl":"Vlam aanzetten"
                        },
                        "value":"-"
                      }
                  ]
                },
                {
                  "type":"group",
                  "label":{
                    "en":"gateway settings",
                    "nl":"gateway instellingen"
                  },
                  "children":[
                    {
                      "id":"ip",
                      "type":"text",
                      "label":{
                        "en":"ip-address",
                        "nl":"ip-adres"
                      },
                      "value":"0.0.0.0"
                    }
                  ]
                }
              ]
        }
    ],
    "capabilities":{
      "flame_enum":{
        "type":"enum",
        "title":{
          "en":"flame status",
          "nl":"vlammen status"
        },
        "desc":{
          "en":"Turn flame off, low or high",
          "nl":"zet vlammen uit, laag of hoog"
        },
        "values":[
          {
            "id":"both",
            "title":{
              "en":"Both flames on",
              "nl":"Beide vlammen aan"
            }
          },{
            "id":"off",
            "title":{
              "en":"turn flames off",
              "nl":"zet vlammen uit"
            }
          },{
            "id":"single",
            "title":{
              "en":"Only turn main on",
              "nl":"Zet alleen hoofdvlam aan"
            }
          }
        ],
        "getable":true,
        "setable":true
      },
      "flame_height":{
        "type":"number",
        "decimals":0,
        "title":{
          "en":"main flame height",
          "nl":"intensiteit hoofdvlam"
        },
        "max":100,
        "min": 0,
        "getable":true,
        "setable": true
      }
    },
    "capabilitiesOptions":{
      "onoff.light":{
        "title":{
          "en":"Light",
          "nl":"Licht"
        }
      }
    }
}
